<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <!--
        Added the constraints for entity Order_component.
    -->
    <changeSet id="20161021113826-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="order_id"
                                 baseTableName="order_component"
                                 constraintName="fk_order_component_order_id"
                                 referencedColumnNames="id"
                                 referencedTableName="order"/>

        <addForeignKeyConstraint baseColumnNames="component_id"
                                 baseTableName="order_component"
                                 constraintName="fk_order_component_component_id"
                                 referencedColumnNames="id"
                                 referencedTableName="component"/>

    </changeSet>
</databaseChangeLog>
